<h3>Listado de productos</h3>
<%= link_to "Nuevo", products_new_path, class: "btn btn-outline-info" %>
<table class="table table-hover">
    <tr>
        <th>Código</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Accion</th>
    </tr>
    <% @products.each do |product| %>
        <tr>
            <td><%= link_to product.code, show_product_path(product) %></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td>
                <%= link_to "Eliminar", delete_product_path(product), method: :delete, 
                    data:{ confirm: "¿Estás seguro de eliminar?"} %>
            </td>
        </tr>
    <% end %>
</table>
<%= will_paginate  @products, renderer: WillPaginate::ActionView::BootstrapLinkRenderer%>
