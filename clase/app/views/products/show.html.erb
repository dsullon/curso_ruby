<h3>Detalle de producto - <small><%= @product.name %></small></h3>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @product.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @product.code %></h6>
    <% if !@product.category.nil? %>
      <%= @product.category.name %>
    <% end %>
    <p class="card-text"><%= @product.comments%></p>
    <%= link_to "Editar", edit_product_path(@product), class: "card-link"%>
    <%= link_to "Eliminar", delete_product_path(@product), method: :delete,
      data:{ confirm: "¿Estás seguro de eliminar?"} %>
  </div>
</div>
